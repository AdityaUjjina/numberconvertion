<project name="junit-example" default="test" basedir=".">
  <property name="main.build.dir" value="build/main"/>
  <property name="main.src.dir" value="src/com/devops"/>
  <property name="test.build.dir" value="build/test"/>
  <property name="test.src.dir" value="test/com/devops"/>
  <property name="report.dir" value="Reports"/>

  <path id="classpath.test">
    <pathelement location="src/lib/junit.jar"/>
    <pathelement location="src/lib/hamcrest-core-1.3.0.jar"/>
    <pathelement location="src/lib/log4j-1.2.17.jar" />
    <pathelement location="${main.build.dir}"/>
  </path>

  <target name="compile">
    <mkdir dir="${main.build.dir}"/>
    <javac srcdir="${main.src.dir}" destdir="${main.build.dir}" includeantruntime="false">
        <classpath refid="classpath.test"/>
    </javac>
  </target>

  <target name="test-compile" depends="compile">
    <mkdir dir="${test.build.dir}"/>
    <javac srcdir="${test.src.dir}" destdir="${test.build.dir}" includeantruntime="false">
        <classpath refid="classpath.test"/>
    </javac>
  </target>

  <target name="test" depends="test-compile">
    <echo>Executing JUnit test</echo>
    <mkdir dir="${report.dir}"/>
    <junit printsummary="on" haltonfailure="yes" fork="true">
        <classpath>
          <path refid="classpath.test"/>
          <path location="${test.build.dir}"/>
        </classpath>
        <test name="com.devops.NumberConvertionTest"
                haltonfailure="no" todir="${report.dir}">
                <formatter type="xml" />
        </test>
    </junit>
    <echo>JUnit execution completed</echo>
  </target>
</project>
